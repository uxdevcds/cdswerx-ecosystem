{
    "name": "cdswerx/cdswerx-plugin",
    "description": "A powerful WordPress plugin that provides advanced custom code management, professional Monaco Editor integration, and seamless theme ecosystem support.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "homepage": "https://cdswerx.com",
    "support": {
        "issues": "https://github.com/cdswerx/cdswerx-plugin/issues",
        "source": "https://github.com/cdswerx/cdswerx-plugin",
        "docs": "https://docs.cdswerx.com"
    },
    "authors": [
        {
            "name": "CDSWerx Team",
            "email": "dev@cdswerx.com",
            "homepage": "https://cdswerx.com"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "custom-code",
        "monaco-editor",
        "elementor",
        "css",
        "javascript",
        "code-injection",
        "theme-integration"
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.12 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "CDSWerx\\Plugin\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CDSWerx\\Plugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress --extensions=php .",
        "cbf": "phpcbf --standard=WordPress --extensions=php .",
        "analyse": "psalm --show-info=true",
        "post-install-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility-wp"
        ],
        "post-update-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility-wp"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "installer-name": "cdswerx"
    }
}